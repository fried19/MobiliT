<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/newReservation"
    android:layout_height="match_parent"
    android:background="@color/colorLayoutBack"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="396dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginBottom="160dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:layout_alignStart="@+id/cv"
            android:layout_marginVertical="2dp">




            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="290dp"
                android:text="Ville de départ  : "
                android:textColor="@color/colorSplashText"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spDepart"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="290dp"

                android:entries="@array/ville" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="160dp"
                android:text="Ville d'arrivée    : "
                android:textColor="@color/colorSplashText"
                android:textSize="20sp" />


            <Spinner
                android:id="@+id/spArrive"
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="160dp"
                android:entries="@array/ville" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="30dp"
                android:text="Date de voyage :"
                android:textColor="@color/colorSplashText"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="170dp"
                android:layout_height="26dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="right|center"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="25dp"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:drawableRight="@drawable/calendar"
                android:text="Choisissez"
                android:textColor="@color/colorSplashText"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/textView9"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="110dp"
                android:text="Montant             :"
                android:textColor="@color/colorSplashText"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/tvMontant"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginTop="110dp"
                android:layout_marginRight="100dp"
                android:text="0"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvDevise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginTop="110dp"
                android:layout_marginRight="75dp"
                android:text="F CFA"
                android:textColor="@color/colorSplashText"
                android:textSize="18sp" />


        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btReservation"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="-250dp"
        android:background="@drawable/bt_uisquare"
        android:text="CONTINUER"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>